import java.util.Map;
import static org.junit.Assert.*;

public class SimpleTest {

    private static WebDriver driver;
    private boolean acceptNextAlert = true;
    
    private static final String URL = "http://localhost:8080/registrationform/";

    @Before
    public  void openBrowser(){
        driver = new FirefoxDriver();
        driver.manage().timeouts().implicitlyWait(10, TimeUnit.SECONDS);

    }

    @Test
    public  void shouldShowWrongAnswerPopupWhenAsnwerIsIncorrect(){

        driver.get(URL);
        String title = driver.getTitle();
        assertEquals("Rule Financial Registration Form", title);

        /*
         * Your code needs to be here, sample below should help you a bit
         * driver.findElement(By.name("firstName")).clear();
         * driver.findElement(By.name("firstName")).sendKeys("Marek");
         */
        Random generator = new Random();
        int randomInt = generator.nextInt(100000);
        Map questionsMap = new HashMap<Object, Object>(); // key - question, value - correct answer
        String[] questions = {"String ruleString = \"RuleFinancial\";\nint start = 0;\nchar end = 4;\nSystem.out.print(\"Go \"+ (end + start) + \" \");\nSystem.out.println(ruleString.substring(start, end));",
        		"int[] intArray = { 1, 0, -1 };\nfor (int i : intArray)\n    if (i <= 0)\n        i = i - 1;\nSystem.out.println(intArray[0] + intArray[1] + intArray[2]);"};
        
        questionsMap.put(new String("String ruleString = \"RuleFinancial\";\nint start = 0;\nchar end = 4;\nSystem.out.print(\"Go \"+ (end + start) + \" \");\nSystem.out.println(ruleString.substring(start, end));"),new String("Go 4 RuleF"));
        questionsMap.put(new String("int[] intArray = { 1, 0, -1 };\nfor (int i : intArray)\n    if (i <= 0)\n        i = i - 1;\nSystem.out.println(intArray[0] + intArray[1] + intArray[2]);"),new String("-2"));
        
        
        driver.findElement(By.name("firstName")).clear();
        driver.findElement(By.name("firstName")).sendKeys("Marcin"+randomInt);
        driver.findElement(By.name("lastName")).clear();
        driver.findElement(By.name("lastName")).sendKeys("Kowalczyk"+randomInt);
        
        String email = new String ("marcin"+randomInt+"@gmail.com");
        driver.findElement(By.name("email")).clear();
        driver.findElement(By.name("email")).sendKeys(email);
        driver.findElement(By.name("repeatEmail")).clear();
        driver.findElement(By.name("repeatEmail")).sendKeys(email);
        
        driver.findElement(By.xpath("//*[@class='gwt-Button' and text()='Java']")).click();
        
        String s = driver.findElement(By.xpath("//div[@class='GOFRIDJCOI']/code")).getText();
        if (s.equals(questions[0])){
        	
        }else if (s.equals(questions[1])){
        	
        }
        driver.findElement(By.id("gwt-uid-22")).click();
        driver.findElement(By.id("gwt-uid-26")).click();
        driver.findElement(By.cssSelector("table.form-buttons > tbody > tr > td > button.gwt-Button")).click();
        assertEquals("WoW Blad taki powazny Problemow tak wiele. Tester sprytny bardzo Uszanowanko wyjatek WoWcould not execute statement", closeAlertAndGetItsText());

    }

    @After
    public void closeBrowser(){
        driver.quit();
    }
    
    private String closeAlertAndGetItsText() {
        try {
          Alert alert = driver.switchTo().alert();
          String alertText = alert.getText();
          if (acceptNextAlert) {
            alert.accept();
          } else {
            alert.dismiss();
          }
          return alertText;
        } finally {
          acceptNextAlert = true;
        }
      }
}
